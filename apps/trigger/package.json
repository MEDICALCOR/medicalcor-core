    "@trigger.dev/sdk": "^3.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  },
  "trigger.dev": {
    "endpointId": "medicalcor-trigger"
