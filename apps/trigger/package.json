{
  "name": "@medicalcor/trigger",
  "version": "0.1.0",
  "private": true,
  "description": "Trigger.dev durable workflow service for MedicalCor",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "trigger dev",
    "build": "tsc --build",
