{
  "name": "@medicalcor/api",
  "version": "0.1.0",
  "private": true,
  "description": "Fastify webhook gateway for MedicalCor",
  "type": "module",
  "main": "./dist/app.js",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsx watch --import ./src/instrumentation.ts src/index.ts",
    "dev:no-otel": "tsx watch src/index.ts",
    "start": "node --import ./dist/instrumentation.js dist/index.js",
    "start:no-otel": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@medicalcor/core": "workspace:*",
    "@medicalcor/infra": "workspace:*",
    "@medicalcor/integrations": "workspace:*",
    "@medicalcor/types": "workspace:*",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/core": "^1.28.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-fastify": "^0.53.0",
    "@opentelemetry/instrumentation-pg": "^0.61.1",
    "@opentelemetry/instrumentation-redis-4": "^0.49.0",
    "@opentelemetry/resources": "^1.28.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-base": "^1.28.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@trigger.dev/sdk": "^3.1.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.0",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
