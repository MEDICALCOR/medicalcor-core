{
  "defaultModel": "claude-2.1-sonnet",
  "maxTokens": 2000,
  "temperature": 0.0,
  "skills": {
    "medicalcor": true,
    "anthropic": true,
    "supabase": true,
    "stripe": false
  },
  "hooks": {
    "preToolUse": ["secret-scanner.sh", "settings-backup.sh"],
    "postToolUse": ["markdown-formatter.sh", "toon-validator.sh"]
  },
  "commands": {
    "analyze-repo": {
      "description": "Full repo analysis for security, quality and docs gaps",
      "cmd": "claude-code analyze --repo . --config .claude/settings.json --output claude-report.json"
    },
    "convert-to-toon": {
      "description": "Convert JSON dataset to TOON format",
      "cmd": "claude-code convert-to-toon --input {input} --output {output}"
    }
  }
}
