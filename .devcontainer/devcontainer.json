{
  "name": "MedicalCor Core",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/supabase/devcontainer-features/supabase-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "prisma.prisma",
        "vitest.explorer"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.preferences.importModuleSpecifier": "relative"
      }
    }
  },
  "forwardPorts": [3000, 3001, 54321, 54322, 54323],
  "portsAttributes": {
    "3000": { "label": "API Gateway" },
    "3001": { "label": "Web Dashboard" },
    "54321": { "label": "Supabase API" },
    "54322": { "label": "Supabase DB" },
    "54323": { "label": "Supabase Studio" }
  },
  "postCreateCommand": "corepack enable && pnpm install",
  "remoteUser": "node"
}
