{
  "name": "medicalcor-core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MedicalCor Core - Medical CRM Monorepo",
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "setup:hooks": "bash scripts/setup-git-hooks.sh",
    "hooks:check": "bash scripts/check-git-hooks.sh",
    "postinstall": "pnpm setup:hooks",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@medicalcor/api",
    "build": "turbo build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check:duplication": "jscpd .",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "db:reset": "supabase db reset --workdir supabase",
    "db:migrate": "tsx tools/run-migrations.ts",
    "db:migrate:legacy": "cd db && dbmate --migrations-dir ./migrations up",
    "db:migrate:status": "tsx tools/migration-status.ts",
    "db:schema:dump": "cd db && dbmate --migrations-dir ./migrations dump",
    "db:schema:validate": "./scripts/validate-schema.sh",
    "db:seed": "tsx db/seed.ts",
    "db:ingest": "tsx scripts/ingest-knowledge.ts",
    "xray-audit": "tsx tools/xray-audit.ts",
    "xray-audit:report": "tsx tools/xray-audit.ts --output XRAY_AUDIT_REPORT.md"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.55",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.49.0",
    "@sentry/nextjs": "^8.38.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.6",
    "jscpd": "^4.0.5",
    "lint-staged": "^15.2.10",
    "msw": "^2.12.3",
    "prettier": "^3.7.3",
    "tsx": "^4.21.0",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/public/**/*.js": [
      "prettier --write"
    ]
  }
}
