{
  "name": "medicalcor-core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MedicalCor Core - Medical CRM Monorepo",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "setup:hooks": "bash scripts/setup-git-hooks.sh",
    "hooks:check": "bash scripts/check-git-hooks.sh",
    "postinstall": "pnpm setup:hooks",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@medicalcor/api",
    "build": "turbo build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check:duplication": "jscpd .",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "db:reset": "supabase db reset --workdir supabase",
    "db:migrate": "tsx tools/run-migrations.ts",
    "db:migrate:legacy": "cd db && dbmate --migrations-dir ./migrations up",
    "db:migrate:status": "tsx tools/migration-status.ts",
    "db:schema:dump": "cd db && dbmate --migrations-dir ./migrations dump",
    "db:schema:validate": "./scripts/validate-schema.sh",
    "db:seed": "tsx db/seed.ts",
    "db:ingest": "tsx scripts/ingest-knowledge.ts",
    "xray-audit": "tsx tools/xray-audit.ts",
    "xray-audit:report": "tsx tools/xray-audit.ts --output XRAY_AUDIT_REPORT.md",
    "smoke-test": "bash scripts/smoke-tests/run-all.sh",
    "smoke-test:k6": "bash scripts/smoke-tests/run-all.sh --with-k6",
    "smoke-test:observability": "tsx scripts/smoke-tests/observability-check.ts",
    "smoke-test:budget": "tsx scripts/smoke-tests/ai-budget-check.ts",
    "k6:smoke": "k6 run --env SCENARIO=smoke scripts/k6/load-test.js",
    "k6:load": "k6 run --env SCENARIO=load scripts/k6/load-test.js",
    "k6:stress": "k6 run --env SCENARIO=stress scripts/k6/load-test.js",
    "k6:rls": "k6 run --env SCENARIO=smoke scripts/k6/rls-performance.js",
    "k6:rls:load": "k6 run --env SCENARIO=load scripts/k6/rls-performance.js",
    "k6:rls:stress": "k6 run --env SCENARIO=stress scripts/k6/rls-performance.js",
    "k6:rls:soak": "k6 run --env SCENARIO=soak scripts/k6/rls-performance.js",
    "check:layer-boundaries": "tsx scripts/check-layer-boundaries.ts",
    "audit:full": "bash scripts/audit-complete.sh",
    "audit:quick": "bash scripts/audit-complete.sh --quick",
    "audit:report": "bash scripts/audit-complete.sh --output",
    "audit:fix": "bash scripts/audit-complete.sh --fix"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.61",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@sentry/nextjs": "^10.29.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "fast-check": "^4.4.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/public/**/*.js": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "cookie@<0.7.0": ">=0.7.0",
      "tmp@<=0.2.3": ">=0.2.4"
    }
  }
}
