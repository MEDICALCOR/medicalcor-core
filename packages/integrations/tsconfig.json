{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    // TODO: Re-enable after fixing type issues in resilience.ts, telemetry.ts, clients-factory.enhanced.ts
    // See code review findings for details on required fixes
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [{ "path": "../core" }, { "path": "../domain" }, { "path": "../types" }]
}
