#!/bin/bash
#
# Pre-commit hook to run linting and type checks on staged files
# Part of MedicalCor Triple-Guard System
#

set -e

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running pre-commit checks...${NC}"

# Get list of staged TypeScript files
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' || true)

if [ -z "$STAGED_TS_FILES" ]; then
    echo -e "${GREEN}No TypeScript files staged, skipping checks${NC}"
    exit 0
fi

# Check if we're in the project root
if [ ! -f "package.json" ]; then
    echo -e "${YELLOW}Warning: Not in project root, skipping pre-commit checks${NC}"
    exit 0
fi

# Run ESLint on staged files
echo -e "${YELLOW}Running ESLint...${NC}"
if command -v pnpm &> /dev/null; then
    # Use lint-staged if available (handles only staged files)
    if pnpm exec lint-staged --quiet 2>/dev/null; then
        echo -e "  ${GREEN}ESLint passed${NC}"
    else
        echo -e "${RED}========================================${NC}"
        echo -e "${RED}  ESLint errors found!${NC}"
        echo -e "${RED}========================================${NC}"
        echo ""
        echo "Please fix the linting errors before committing."
        echo "Run: pnpm lint:fix"
        echo ""
        exit 1
    fi
else
    echo -e "${YELLOW}pnpm not found, skipping lint check${NC}"
fi

# Run TypeScript check (only if there are staged .ts/.tsx files)
echo -e "${YELLOW}Running TypeScript check...${NC}"
if command -v pnpm &> /dev/null; then
    if pnpm typecheck --quiet 2>/dev/null; then
        echo -e "  ${GREEN}TypeScript check passed${NC}"
    else
        echo -e "${RED}========================================${NC}"
        echo -e "${RED}  TypeScript errors found!${NC}"
        echo -e "${RED}========================================${NC}"
        echo ""
        echo "Please fix the type errors before committing."
        echo "Run: pnpm typecheck"
        echo ""
        exit 1
    fi
else
    echo -e "${YELLOW}pnpm not found, skipping typecheck${NC}"
fi

echo -e "${GREEN}Pre-commit checks passed${NC}"
exit 0
